<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- State when the button is checked -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <!-- Background color for the selected state -->
            <solid android:color="#FFF5EE" />
            <!-- Border for the selected state -->
            <stroke android:width="2dp" android:color="#C67C4E" />
            <!-- Rounded corners -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Default state (when the button is not checked) -->
    <item>
        <shape android:shape="rectangle">
            <!-- Background color for the default state -->
            <solid android:color="#FFFFFF" />
            <!-- Border for the default state -->
            <stroke android:width="1dp" android:color="#DEDEDE" />
            <!-- Rounded corners -->
            <corners android:radius="12dp" />
        </shape>
    </item>

</selector>
